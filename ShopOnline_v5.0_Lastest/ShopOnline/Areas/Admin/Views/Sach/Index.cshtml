@model IEnumerable<ShopOnline.Models.Sach>

@{
	ViewBag.Title = "Sách";
}

<div class="card mt-3">
	<h5 class="card-header">@ViewBag.Title</h5>
	<div class="card-body">
		<p><a class="btn btn-success" href="@Url.Action("Create")" role="button"><i class="fal fa-plus"></i> Thêm mới</a></p>
		<table class="table table-bordered table-hover table-sm mb-0">
            <tr>
                <th width="5%">#</th>
                <th>
                    @Html.DisplayNameFor(model => model.TenSach)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DonGia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.SoLuong)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HinhAnhBia)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.LoaiSach.TenLoai)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.NhaXuatBan.TenNhaXuatBan)
                </th>
                <th width="5%">Sửa</th>
                <th width="5%">Xóa</th>
            </tr>
			@{ int stt = 1; }
			@foreach (var item in Model)
			{
				<tr>
					<td>@stt</td>
					<td>
						@Html.DisplayFor(modelItem => item.TenSach)
					</td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.DonGia)
                    </td>
					<td class="text-right">
						@Html.DisplayFor(modelItem => item.SoLuong)
					</td>
                    <td class="text-center">
                        <img src="~/@item.HinhAnhBia" width="60" class="img-thumbnail" />
                    </td>
					<td>
						@Html.DisplayFor(modelItem => item.LoaiSach.TenLoai)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.NhaXuatBan.TenNhaXuatBan)
					</td>
					<td class="text-center">
						<a href="@Url.Action("Edit", new { id = item.ID })"><i class="fal fa-edit"></i></a>
					</td>
					<td class="text-center">
						<a href="@Url.Action("Delete", new { id = item.ID })"><i class="fal fa-trash-alt text-danger"></i></a>
					</td>
				</tr>
				stt++;
			}
		</table>
	</div>
</div>